{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES6",
        ],
        "rootDir": ".",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Node",
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declarationDir": "dist/types",
        "outDir": "dist/esm",
    },
    "include": [
        "./src/**/*.ts",
        "./tests",
        "./src/types",
        "./src/index.ts",
    ],
    "exclude": [
        "node_modules",
    ]
}