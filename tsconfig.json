{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2022"
        ],
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "target": "ES6",
        "module": "NodeNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "declarationDir": "dist/types",
        "outDir": "dist/esm",
    },
    "include": [
        "src",
        "./src/index.ts",
    ],
    "exclude": [
        "node_modules",
    ]
}