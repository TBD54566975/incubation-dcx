{
  "compilerOptions": {
    "target": "es2017",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./packages/*/dist/esm",
    "declarationDir": "./packages/*/dist/types",
    "paths": {
      "@dvcx/*": [
        "./packages/*/src"
      ],
    },
    "lib": [
      "dom",
      "es2022",
    ]
  },
  "include": [
    "./packages/*/src"
  ],
  "exclude": [
    "node_modules",
    "./packages/*/node_modules"
  ],
}