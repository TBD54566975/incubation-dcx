{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2022",
        ],
        "target": "ES2017",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declarationDir": "dist/types",
        "outDir": "dist/esm",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}