{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2022",
        ],
        "target": "ES2017",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declarationDir": "dist/types",
        "outDir": "dist/esm",
        "baseUrl": ".",
        "paths": {
            "#util/*": [
                "node_modules/uint8arraylist/node_modules/uint8arrays/dist/src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}