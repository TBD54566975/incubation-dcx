                    "type": "string"
                },
                "application_id": {
                    "type": "string"
                },
                "fulfillment": {
                    "type": "object",
                    "properties": {
                        "descriptor_map": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
