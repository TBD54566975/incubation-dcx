                    "can": [
                        "create",
                        "update",
                        "read",
                        "query",
                        "subscribe"
                    ]
                },
                {
                    "role": "admin",
                    "can": [
                        "co-update",
                        "co-delete"
                    ]
                }
            ]
        }
    }
