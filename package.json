{
  "name": "dcx",
  "version": "1.0.0",
  "description": "Decentralized Credential Exchange - verifiable credential issuer server with direction DWN integration",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist coverage tests/compiled",
    "build:esm": "rimraf dist/esm dist/types && npm tsc -p tsconfig.json",
    "build:cjs": "rimraf dist/cjs && npm tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json",
    "build:browser": "rimraf dist/browser.mjs dist/browser.js && node build/bundles.js",
    "build:tests:node": "rimraf tests/compiled && npm tsc -p tests/tsconfig.json",
    "build:tests:browser": "rimraf tests/compiled && node build/esbuild-tests.cjs",
    "build": "npm clean && npm build:esm && npm build:cjs && npm build:browser",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test:node": "npm build:tests:node && npm c8 mocha",
    "test:browser": "npm build:tests:browser && web-test-runner"
  },
  "homepage": "https://github.com/TBD54566975/incubation-tblend#readme",
  "bugs": "https://github.com/TBD54566975/incubation-tblend/issues",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/TBD54566975/incubation-tblend.git"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Bryan Nonni",
      "url": "https://github.com/bnonni"
    },
    {
      "name": "Ian Patton",
      "url": "https://github.com/ianpatton"
    }
  ],
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./utils": {
      "types": "./dist/types/utils.d.ts",
      "import": "./dist/esm/utils.js",
      "require": "./dist/cjs/utils.js"
    }
  },
  "keywords": [
    "decentralized",
    "decentralized-applications",
    "decentralized-identity",
    "decentralized-web",
    "vcs",
    "verifiable credentials",
    "web5",
    "verifiable credentials issuer"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@web5/agent": "^0.3.1",
    "@web5/api": "^0.9.2",
    "@web5/common": "^1.0.0",
    "@web5/credentials": "^1.0.0",
    "@web5/crypto": "^1.0.0",
    "@web5/crypto-aws-kms": "^1.0.0",
    "@web5/dids": "^1.0.0",
    "@web5/identity-agent": "^0.3.1",
    "@web5/proxy-agent": "^0.3.1",
    "@web5/user-agent": "^0.3.1"
  },
  "devDependencies": {
    "@hapi/code": "^9.0.3",
    "@hapi/lab": "^25.1.3",
    "@types/node": "^20.6.2",
    "@types/uuid": "^9.0.4",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "@types/readable-stream": "^4.0.14",
    "@types/secp256k1": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-plugin-todo-plz": "^1.3.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.2.2"
  }
}