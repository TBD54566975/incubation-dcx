{
  "name": "dvcx",
  "version": "0.0.1",
  "description": "DVCX: Decentralized Verifiable Credential Exchange. DWN protocol for verifiable credential exchange.",
  "type": "module",
  "workspaces": [
    "packages/applicant",
    "packages/issuer",
    "packages/common"
  ],
  "scripts": {
    "clean": "pnpm npkill -d $(pwd)/packages -t dist && pnpm npkill -d $(pwd) -t node_modules",
    "build": "pnpm --recursive --stream build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:node": "pnpm --recursive test:node",
    "test:e2e": "echo TODO: Add unit tests && exit 0",
    "test:unit": "echo TODO: Add unit tests && exit 0",
    "workflow": "pnpm install --frozen-lockfile && pnpm run build --if-present && npm test",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TBD54566975/incubation-dcx.git"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Bryan Nonni",
      "url": "https://github.com/bnonni"
    },
    {
      "name": "Ian Patton",
      "url": "https://github.com/ianpatton"
    }
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.7.0",
    "@npmcli/package-json": "5.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "audit-ci": "^7.1.0",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-mocha": "^10.4.3",
    "npkill": "0.11.3",
    "rimraf": "^5.0.9"
  },
  "pnpm": {
    "overrides": {
      "express@<4.19.2": ">=4.19.2",
      "ws@<8.17.1": ">=8.17.1"
    }
  }
}